<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88383838"
    android:gravity="center"
    android:minHeight="100dp"
    android:minWidth="250dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textoSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/saldo_default"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/imageButtonInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#88383838"
            android:drawableTop="@drawable/ic_action_internet"
            android:onClick="requestInternet"
            android:padding="5dp"
            android:text="@string/internet"
            android:textColor="@color/blanco1" />

        <Button
            android:id="@+id/imageButtonSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#88383838"
            android:drawableTop="@drawable/ic_action_saldo_internet"
            android:onClick="requestCredit"
            android:padding="5dp"
            android:text="@string/residue"
            android:textColor="@color/blanco1" />

        <Button
            android:id="@+id/imageButtonPrestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#88383838"
            android:drawableTop="@drawable/ic_action_prestar"
            android:onClick="requestLoan"
            android:padding="5dp"
            android:text="@string/lend"
            android:textColor="@color/blanco1" />
        
                <Button
            android:id="@+id/imageButtonSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#88383838"
            android:drawableTop="@drawable/ic_action_saldo_internet"
            android:onClick="requestCredit2"
            android:padding="5dp"
            android:text="@string/residue"
            android:textColor="@color/blanco1" />
        
        
    </LinearLayout>

</LinearLayout>