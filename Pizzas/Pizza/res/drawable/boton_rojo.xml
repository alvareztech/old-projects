<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/rojo_claro" />

            <corners android:radius="7dp" />
            <stroke android:width="1dp" android:color="@color/rojo" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:centerY="0.9" android:endColor="@color/rojo" android:startColor="@color/rojo_claro" />

            <corners android:radius="7dp" />

            <stroke android:width="1dp" android:color="@color/rojo" />
        </shape></item>

</selector>