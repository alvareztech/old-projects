<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/verde_claro2" />

            
            <stroke android:width="1dp" android:color="@color/verde2" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:centerY="0.9" android:endColor="@color/verde2" android:startColor="@color/verde_claro2" />

            

            <stroke android:width="1dp" android:color="@color/verde2" />
        </shape></item>

</selector>