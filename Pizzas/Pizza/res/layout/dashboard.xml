<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo_imagen"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_empresa" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/boton1_inicio"
                style="@style/BotonDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/inicio_gente"
                android:onClick="pedir"
                android:text="@string/pedir" />

            <Button
                android:id="@+id/boton2_inicio"
                style="@style/BotonDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/inicio_libreta"
                android:onClick="verCarta"
                android:text="@string/ver_carta" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/boton3_inicio"
                style="@style/BotonDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/inicio_pin"
                android:onClick="localizar"
                android:text="@string/localizar" />

            <Button
                android:id="@+id/boton4_inicio"
                style="@style/BotonDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/inicio_mesa"
                android:onClick="obtenerPromocion"
                android:text="@string/obtener_promocion" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>