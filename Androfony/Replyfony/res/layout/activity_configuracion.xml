<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margen_ficha"
        android:text="@string/configuraciones"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/rojo_claro" />

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco1"
        android:cacheColorHint="#00000000"
        android:divider="@color/blanco1"
        android:dividerHeight="0dp" >
    </ListView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="activarServicio"
        android:text="Activar el servicio de sensor" />

</LinearLayout>